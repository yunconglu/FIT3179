{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 World Cumulative Death (03 Jan 2020 -15 Oct 2020)",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://yunconglu.github.io/FIT3179/js/world_shapefile.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://yunconglu.github.io/FIT3179/WHO-COVID-19-global-data.csv"
        },
        "key": " Country",
        "fields": [" Cumulative_deaths"]
      }
    }
  ],
  "selection": {
    "Cumulative_deaths_count": {
      "type": "single",
      "fields": ["Cumulative_deaths"],
      "bind": {
        "Cumulative_deaths": {
          "input": "range",
          "min": 0,
          "max": 1000000,
          "step": 1000
        }
      }
    }
  },
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": " Cumulative_deaths",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [100, 5000, 10000, 30000, 100000, 150000, 200000],
        "range": [
          "#D4F2E7",
          "#fdbe85",
          "#fd8d3c",
          "#e6550d",
          "#B22222",
          "#800000"
        ]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": " Country"},
      {"field": " Cumulative_deaths", "type": "quantitative"}
    ]
  },
  "config": {}
}