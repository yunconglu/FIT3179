{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Cumulative cases distribution in regions( 03 Jan 2020 -15 Oct 2020)",
  "description": "COVID-19 distribution of regions",
  "data": {"url": "https://yunconglu.github.io/FIT3179/covid.csv"},
  "encoding": {
    "theta": {
      "field": "New_cases",
      "type": "quantitative",
      "aggregate": "sum",
      "stack": true
    },
    "color": {"field": "WHO_region", "type": "nominal", "legend": true},
    "tooltip": [
      {"field": "WHO_region", "type": "ordinal", "title": "Region"},
      {
        "field": "New_cases",
        "aggregate": "sum",
        "type": "ordinal",
        "title": "Cumulative cases"
      }
    ]
  },
  "layer": [
    {"mark": {"type": "arc", "outerRadius": 80}}
  ],
  "view": {"stroke": null},
  "config": {}
}
