{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "Countries of over 750,000 Cumulative_cases",
  "transform": [{"filter": "datum.Cumulative_cases > 750000"}],
  "data": {"url": "https://yunconglu.github.io/FIT3179/covid.csv"},
  "encoding": {
    "theta": {
      "field": "Cumulative_cases",
      "type": "quantitative",
      "aggregate": "max",
      "stack": true
    },
    "color": {"field": "Country", "type": "nominal", "legend": true},
    "tooltip": [
      {"field": "Country", "type": "ordinal", "title": "Country"},
      {
        "field": "Cumulative_cases",
        "aggregate": "max",
        "type": "ordinal",
        "title": "Cumulative cases"
      }
    ]
  },
  "layer": [
    {"mark": {"type": "arc", "outerRadius": 80}},
    {
      "mark": {"type": "text", "radius": 90},
      "encoding": {"text": {"field": "Country", "type": "nominal"}}
    }
  ],
  "view": {"stroke": null},
  "config": {}
}
